{% extends 'base.html.twig' %}

{% block title %}Détails du groupe privé{% endblock %}

{% block body %}
    <h1>{{ band.name }}</h1>

    <div class="card mb-4">
        <div class="card-header">
            <h2>Détails du groupe</h2>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Nom</th>
                        <td>{{ band.name }}</td>
                    </tr>
                    <tr>
                        <th>Créé par</th>
                        <td>{{ band.owner.firstname }} {{ band.owner.lastname }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>Membres du groupe ({{ band.members|length }})</h2>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                {% for member in band.members %}
                    <tr>
                        <td>{{ member.lastname }}</td>
                        <td>{{ member.firstname }}</td>
                        <td>{{ member.email }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucun membre dans ce groupe</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

<div class="mt-3">
    <a href="{{ path('app_band_index') }}" class="btn btn-secondary">Retour à la liste</a>
    {% if is_granted('edit', band) %}
        <a href="{{ path('app_band_edit', {'id': band.id}) }}" class="btn btn-warning">Modifier</a>
    {% endif %}
    {% if is_granted('delete', band) %}
        <form method="post" action="{{ path('app_band_delete', {'id': band.id}) }}" style="display: inline-block">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ band.id) }}">
            <button class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce groupe ?')">Supprimer</button>
        </form>
    {% endif %}
</div>
{% endblock %}