{% extends 'base.html.twig' %}

{% block title %}Modifier le groupe{% endblock %}

{% block body %}
    <h1>Modifier le groupe</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('app_band_index') }}" class="btn btn-secondary">Retour à la liste</a>

        {% if band.owner.id == app.user.id %}
            <form method="post" action="{{ path('app_band_delete', {'id': band.id}) }}" style="display: inline-block">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ band.id) }}">
                <button class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce groupe ?')">Supprimer</button>
            </form>
        {% endif %}
    </div>
{% endblock %}