{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau groupe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4">Créer un nouveau groupe privé</h1>

                <div class="card mb-4">
                    <div class="card-header">
                        <h2>Informations du groupe</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>

                        <div class="mb-3">
                            {{ form_label(form.members) }}
                            {{ form_widget(form.members) }}
                            {{ form_errors(form.members) }}
                        </div>
                        <div class="text-center">
                            {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="mt-3 text-center">
                    <a href="{{ path('app_band_user', {'id': app.user.id}) }}" class="btn btn-secondary">Retour à la liste des groupes</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}