{% extends 'base.html.twig' %}

{% block title %}New User
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.card-link {
			overflow: hidden;
			transition: transform 0.3s;
		}
		.card-link:hover {
			transform: scale(1.03);
		}
	</style>
{% endblock %}

{% block body %}
	<div class="container my-5">
		<div class="row">
			<div class="col-md-6 mb-4">
				<a href="{{ path('app_user_new') }}" class="text-decoration-none">
					<div class="card text-white card-link">
						<img src="{{ asset('images/illustration1.jpg') }}" class="card-img" alt="Illustration 1" style="object-fit: cover; height:300px;">
						<div class="card-img-overlay d-flex flex-column justify-content-center" style="background: rgb(45, 118, 255);">
							<h5 class="card-title">Inscription manuelle</h5>
							<p class="card-text">Utilisez le formulaire d'inscription classique.</p>
						</div>
					</div>
				</a>
			</div>
			<div class="col-md-6 mb-4">
				<a href="{{path('app_user_csv-register')}}" class="text-decoration-none">
					<div class="card text-white card-link">
						<img src="{{ asset('images/illustration2.jpg') }}" class="card-img" alt="Illustration 2" style="object-fit: cover; height:300px;">
						<div class="card-img-overlay d-flex flex-column justify-content-center" style="background: rgb(54, 185, 87);">
							<h5 class="card-title">Inscription via un fichier csv</h5>
							<p class="card-text">Importez des Utilisateurs depuis un fichier excel.</p>
						</div>
					</div>
				</a>
			</div>
		</div>
	</div>
{% endblock %}
