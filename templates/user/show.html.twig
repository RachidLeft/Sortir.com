{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">👤 {{ user.username }}</h2>
        </div>

        <div class="card shadow-lg mx-auto" style="max-width: 600px;">
            <div class="card-body">
                <div class="text-center mb-4">
                    <img src="{{ asset('uploads/pictures/' ~ user.picture) }}" alt="Photo de profil" class="rounded-circle shadow-sm border border-3 border-primary" width="150" height="150">
                </div>

                <ul class="list-group list-group-flush fs-5">
                    <li class="list-group-item">
                        📧 <strong>Email :</strong> {{ user.email }}
                    </li>
                    <li class="list-group-item">
                        👨‍👩‍👧 <strong>Nom :</strong> {{ user.lastname }}
                    </li>
                    <li class="list-group-item">
                        🧑 <strong>Prénom :</strong> {{ user.firstname }}
                    </li>
                    <li class="list-group-item">
                        📱 <strong>Téléphone :</strong> {{ user.phone }}
                    </li>
                    <li class="list-group-item">
                        🕵️‍♂️ <strong>Pseudo :</strong> {{ user.username }}
                    </li>
                </ul>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_main_index') }}" class="btn btn-outline-info">
                🔙 Retour à l'accueil
            </a>
        </div>
    </div>

    {#<a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
    {{ include('user/_delete_form.html.twig') }}#}
{% endblock %}
