{% extends 'base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-primary">‚úèÔ∏è Modifier la sortie</h2>
                    <p class="text-muted">Ajuste les informations avant de la publier ou de l‚Äôenregistrer</p>
                </div>

                {{ form_start(form, {'id': 'form'}) }}

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light fw-semibold">üóìÔ∏è Informations g√©n√©rales</div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                {{ form_row(form.name) }}
                                {{ form_row(form.startDateTime) }}
                                {{ form_row(form.registrationDeadline) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.maxRegistration) }}
                                {{ form_row(form.duration) }}
                                {{ form_row(form.info) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4" data-controller="address">
                    <div class="card-header bg-light fw-semibold">üìç Lieu de la sortie</div>
                    <div class="card-body">
                        {{ form_row(form.location, {'id': 'location'}) }}
                        <a href="#" class="btn btn-sm btn-outline-secondary mt-3" data-action="address#display_new_address">Ajouter un nouveau lieu</a>
                        <div id="new-address" class="mt-3" style="display:none;">
                            {{ form_row(form.newLocation) }}
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-wrap justify-content-center gap-3">
                    <div>{{ form_row(form.publier, { 'attr': {'class': 'btn btn-success px-4'} }) }}</div>
                    <div>{{ form_row(form.enregistrer, { 'attr': {'class': 'btn btn-primary px-4'} }) }}</div>

                    {{ form_end(form) }}

                    <div>
                        <a href="{{ path('app_main_index') }}" class="btn btn-outline-secondary px-4">Annuler</a>
                    </div>
                    <div>
                        {% include 'event/_delete_form.html.twig' %}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
