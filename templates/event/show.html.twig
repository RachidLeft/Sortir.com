{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>StartDateTime</th>
                <td>{{ event.startDateTime ? event.startDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ event.duration }}</td>
            </tr>
            <tr>
                <th>RegistrationDeadline</th>
                <td>{{ event.registrationDeadline ? event.registrationDeadline|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>MaxRegistration</th>
                <td>{{ event.maxRegistration }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ event.info }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td><p>Lieu : {{ location.name }} - {{ location.street }}, {{ location.postalCode }} {{ location.cityName }}</p></td>
        </tbody>
    </table>

    <div class="btn-group" role="group">
        <a class="btn btn-outline-warning mt-3" href="{{ path('app_event_edit', {'id': event.id}) }}">Modifier</a>
    </div>
    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
