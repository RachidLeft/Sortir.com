{% extends 'base.html.twig' %}

{% block title %}Nouvelle sortie{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center" data-controller="address">
            <div class="col-lg-10">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-success">üóìÔ∏è Cr√©er une nouvelle sortie</h2>
                    <p class="text-muted">Remplis les informations ci-dessous pour organiser ton √©v√©nement üöÄ</p>
                </div>

                <div class="card shadow-lg p-4">
                    {{ form_start(form, {'id': 'form'}) }}
                    <div class="row g-4">
                        <div class="col-md-6">
                            {{ form_row(form.name) }}
                            {{ form_row(form.startDateTime) }}
                            {{ form_row(form.registrationDeadline) }}
                            {{ form_row(form.maxRegistration) }}
                            {{ form_row(form.duration) }}
                            {{ form_row(form.info) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.location, {'id': 'location'}) }}
                            <div class="mt-3">
                                <a href="#" class="btn btn-outline-secondary btn-sm"
                                   data-action="address#display_new_address">
                                    ‚ûï Ajouter un nouveau lieu
                                </a>
                            </div>
                            <div id="new-address" class="mt-3" style="display:none;">
                                {{ form_row(form.newLocation) }}
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row justify-content-center text-center">
                        <div class="col-auto me-3">
                            {{ form_row(form.publier, { 'attr': {'class': 'btn btn-success px-4'} }) }}
                        </div>
                        <div class="col-auto me-3">
                            {{ form_row(form.enregistrer, { 'attr': {'class': 'btn btn-outline-primary px-4'} }) }}
                        </div>
                        {{ form_end(form) }}
                        <div class="col-auto">
                            <a href="{{ path('app_main_index') }}" class="btn btn-outline-secondary px-4">Annuler</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
