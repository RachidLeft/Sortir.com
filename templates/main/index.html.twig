                {{ form_start(filtreForm, {'action': path('app_main_index', {'page': 1})}) }}

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(filtreForm.site) }}
                            {{ form_widget(filtreForm.site, {'attr': {'class': 'form-select'}}) }}
