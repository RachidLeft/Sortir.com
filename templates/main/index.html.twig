{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} / Accueil {% endblock %}

{% block body %}
    <div class="container-fluid pt-3">
    <div class="text-center mb-4">
    <h2 class="fw-bold text-primary">ðŸ‘‹ Salut {{ app.user.firstname }} {{ app.user.lastname }}</h2>
